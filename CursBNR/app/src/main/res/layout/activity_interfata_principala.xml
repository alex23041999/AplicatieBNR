<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sid_background_grey"
    android:orientation="vertical"
    tools:context=".InterfataPrincipala">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/bg_border_white"
        android:orientation="vertical"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cursBNR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_ripple2"
            android:gravity="center"
            android:text="Curs BNR"
            android:textColor="@color/lm_white"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_inventar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="50dp"
            android:background="@drawable/gradient_ripple"
            android:gravity="center"
            android:text="Inventar"
            android:textColor="@color/lm_white"
            android:textSize="25sp"

            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>